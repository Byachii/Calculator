<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/answer_text_view"
        android:layout_width="173dp"
        android:layout_height="97dp"
        android:gravity="center"
        android:padding="24dp"
        tools:text="@string/answer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_button" />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minus_button"/>

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiply_button" />

        <Button
            android:id="@+id/divide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divide_button"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/one"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/two_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/two"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/three_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/three"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/four"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/five_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/five"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/six_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/six"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/seven"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/eight_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/eight"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/nine_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F3972"
            android:text="@string/nine"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/dot_button" />

        <Button
            android:id="@+id/zero_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/zero" />

        <Button
            android:id="@+id/equals_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/equals" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/cancel_button" />
    </LinearLayout>

</LinearLayout>